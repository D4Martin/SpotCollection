<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="20"
            android:text="Spots" android:id="@+id/btSpots"/>
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="20"
            android:text="Favourites" android:id="@+id/btFavourites"/>
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="20"
            android:text="Profile" android:id="@+id/btProfile"/>
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="20"
            android:text="Settings" android:id="@+id/btSettings"/>
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="20"
            android:text="MySpots"/>
</LinearLayout>