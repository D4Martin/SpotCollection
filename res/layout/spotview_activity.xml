<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:rowCount="6"
              android:columnCount="4"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ImageView
            android:id="@+id/ivProfilePicView" android:layout_column="0" android:layout_row="0"
            android:layout_columnSpan="2" android:layout_rowSpan="2" android:src="@drawable/index"/>

    <TextView
            android:id="@+id/tvNameView"
            android:layout_column="2"
            android:layout_row="0" android:layout_columnSpan="2" android:text="" android:singleLine="true"

            android:textSize="15pt" android:layout_gravity="center|right"/>

    <ImageButton
            android:id="@+id/btAddView" android:layout_column="2" android:layout_row="1"

            android:textSize="15pt" android:src="@drawable/plus" android:layout_columnSpan="2"
            android:layout_gravity="center|right"/>

    <TextView
            android:id="@+id/tvDifficultyView" android:layout_row="4" android:layout_column="0"
            android:layout_columnSpan="4" android:text=""
            android:textSize="15pt"/>

    <RatingBar
            android:id="@+id/rabaRatingView"
            android:layout_column="0" android:layout_columnSpan="4" android:layout_row="5"
            android:stepSize="1"
            android:layout_rowSpan="1"/>
    <TextView
            android:height="40mm"
            android:text="Large Text"
            android:id="@+id/tvDescriptionView"
            android:layout_row="2" android:layout_column="0" android:layout_columnSpan="4" android:layout_rowSpan="2"/>

</GridLayout>