<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:focusable="true"
                     android:src="@drawable/menu_icon" android:id="@+id/btMenu" android:layout_weight="5"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tfSearchText" android:layout_weight="90"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:src="@drawable/search_icon" android:id="@+id/btSearch" android:layout_weight="5"/>
    </LinearLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/LogoSplashScreen"/>
</LinearLayout>

