<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout android:layout_width="fill_parent" android:layout_height="50" android:orientation="horizontal">
        <ImageButton android:layout_width="50" android:layout_height="fill_parent" android:focusable="true"
                     android:src="@drawable/menu_icon" android:onClick="OnMenu" android:id="@+id/btMenu"/>
        <EditText android:layout_width="280" android:layout_height="fill_parent" android:id="@+id/tfSearchText"/>
        <ImageButton android:layout_width="fill_parent" android:layout_height="fill_parent"
                     android:src="@drawable/search_icon" android:id="@+id/btSearch"/>
    </LinearLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/LogoSplashScreen"/>
</LinearLayout>

